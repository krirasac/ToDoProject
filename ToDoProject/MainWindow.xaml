<Window x:Class="ToDoProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="820" Width="1420" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="MainGrid" Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="1170*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Style="{DynamicResource NavBG}" Margin="0,0,5,0">
            <Label Style="{DynamicResource Header}"  Content="LIST"  Margin="70,50,0,0" FontSize="24" FontWeight="Bold" Foreground="#FFF0F0F0" />
            <DockPanel Height="50">
                <Button Style="{DynamicResource NavBTN}" Content="ALL" x:Name="MW_All_Btn" Margin="70,5,0,5" HorizontalAlignment="Left" FontSize="20"/>
                <Label Style="{DynamicResource Counter}" Content="0" x:Name="AllCounter" Margin="80,5,0,5" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="39" VerticalContentAlignment="Center"/>
            </DockPanel>
            <DockPanel Height="50">
                <Button Style="{DynamicResource NavBTN}" Content="PERSONAL" x:Name="MW_Personal_Btn"  Margin="70,5,0,5" HorizontalAlignment="Left" FontSize="20"/>
                <Label Style="{DynamicResource Counter}" Content="0" x:Name="PersonalCounter" Margin="15,5,0,5" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="39" VerticalContentAlignment="Center"/>
            </DockPanel>
            <DockPanel Height="50">
                <Button Style="{DynamicResource NavBTN}" Content="WORK" x:Name="MW_Work_Btn"  Margin="70,5,0,5" HorizontalAlignment="Left" FontSize="20"/>
                <Label Style="{DynamicResource Counter}" Content="0" x:Name="WorkCounter" Margin="55,5,0,5" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="39" VerticalContentAlignment="Center" Padding="5,5,5,5"/>
            </DockPanel>
            <Label Style="{DynamicResource Header}" Content="CALENDAR"  Margin="70,50,0,0" FontSize="24" FontWeight="Bold" Foreground="#FFF0F0F0" />

            <DockPanel Height="50">
                <Button  Style="{DynamicResource NavBTN}" Content="WEEKLY" x:Name="MW_Wk_Btn" Margin="70,5,0,5" HorizontalAlignment="Left" FontSize="20"/>
            </DockPanel>
            <DockPanel Height="50">
                <Button Style="{DynamicResource NavBTN}" Content="MONTHLY" x:Name="MW_Mn_Btn" Margin="70,5,0,5" HorizontalAlignment="Left" FontSize="20"/>
            </DockPanel>
        </StackPanel>

        <Image Source="/Assets/list.png" HorizontalAlignment="Left" Height="28" Margin="28,56,0,0" VerticalAlignment="Top" Width="26"/>
        <Image Source="/Assets/calendar.png" HorizontalAlignment="Left" Height="29" Margin="28,293,0,0" VerticalAlignment="Top" Width="28"/>

        <Border Style="{DynamicResource NavShadowBlur}" Grid.Column="1">
        </Border>
        <Canvas x:Name="PopBG" Style="{DynamicResource PopUp}" Grid.ColumnSpan="2" Visibility="Collapsed"/>
    </Grid>
</Window>
