<Page x:Class="ToDoProject.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToDoProject"
      mc:Ignorable="d" 
      d:DesignHeight="804" d:DesignWidth="1170"
      Title="List">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="ListGrid" Background="#FFE3E3E3">
        <Label Style="{DynamicResource Header}" x:Name="CategoryLB" Content="Category" HorizontalAlignment="Left" Margin="60,94,0,0" VerticalAlignment="Top" Height="94" Width="373" FontSize="36" VerticalContentAlignment="Center" Padding="5,5,5,5" FontWeight="Bold"/>
        <Button Style="{DynamicResource CompleteBTN}" x:Name="ShowCompleteBTN" Content="Show Completed" HorizontalAlignment="Left" Height="74" Margin="888,104,0,0" VerticalAlignment="Top" Width="220" FontSize="20" Click="ShowCompleteBTN_Click" FontWeight="Bold"/>
        <Border Style="{DynamicResource BorderWithShadowBlur}" Width="330" Height="521" Margin="60,224,780,59">
            <Canvas Style="{DynamicResource CanvaList}" x:Name="LowPriority" HorizontalAlignment="Center" Height="521" VerticalAlignment="Center" Width="330" Grid.RowSpan="2">
                <ListBox x:Name="LowPriorityList" Style="{DynamicResource List}"  ItemContainerStyle="{DynamicResource ContainerStyle}" Height="354" Canvas.Left="27" Canvas.Top="128" Width="276" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Label Content="Low" Height="49" Width="122" FontSize="25" VerticalContentAlignment="Center" Padding="5,5,5,5" HorizontalAlignment="Left" Canvas.Left="27" Canvas.Top="46" VerticalAlignment="Top"/>
                <Button Style="{DynamicResource AddBTN}" x:Name="LowAddBTN" Height="40" Canvas.Left="264" Canvas.Top="40" Width="42" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Background>
                        <ImageBrush ImageSource="/Assets/add_button.png" Stretch="Uniform"/>
                    </Button.Background>

                </Button>
            </Canvas>
        </Border>

        <Border Style="{DynamicResource BorderWithShadowBlur}" Width="330" Height="521" Margin="420,224,420,59">
            <Canvas Style="{DynamicResource CanvaList}" x:Name="MediumPriority" HorizontalAlignment="Center" Height="521" VerticalAlignment="Center" Width="330">
                <ListBox Style="{DynamicResource List}"  ItemContainerStyle="{DynamicResource ContainerStyle}" Height="355" Canvas.Left="28" Canvas.Top="123" Width="276" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Label Content="Medium" Height="49" Width="122" FontSize="25" VerticalContentAlignment="Center" Padding="5,5,5,5" Canvas.Left="28" Canvas.Top="41" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Button Style="{DynamicResource AddBTN}" x:Name="MedAddBTN" Height="40" Canvas.Left="264" Canvas.Top="40" Width="42" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Canvas>
        </Border>

        <Border Style="{DynamicResource BorderWithShadowBlur}" Width="330" Height="521" Margin="778,224,62,59">
            <Canvas Style="{DynamicResource CanvaList}" x:Name="HighPriority" HorizontalAlignment="Center" Height="521" VerticalAlignment="Center" Width="330" Grid.RowSpan="2">
                <ListBox Style="{DynamicResource List}"  ItemContainerStyle="{DynamicResource ContainerStyle}" d:ItemsSource="{d:SampleData ItemCount=5}" Height="355" Canvas.Left="30" Canvas.Top="118" Width="276" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Label Content="High" FontSize="25" VerticalContentAlignment="Center" Padding="5,5,5,5" Height="49" Canvas.Left="30" Canvas.Top="36" Width="122"/>
                <Button Style="{DynamicResource AddBTN}" x:Name="HighAddBTN" Height="40" Canvas.Left="264" Canvas.Top="40" Width="42" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Canvas>
        </Border>
        <Canvas Style="{DynamicResource CanvaList}" x:Name="CompleteList" HorizontalAlignment="Center" Height="521" Margin="0,224,0,0" VerticalAlignment="Top" Width="1048" Visibility="Collapsed">
            <ListBox Height="365" Canvas.Left="27" Canvas.Top="128" Width="993" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Completed" Height="49" Width="122" FontSize="25" FontWeight="Bold" VerticalContentAlignment="Center" Padding="5,5,5,5" HorizontalAlignment="Left" Canvas.Left="27" Canvas.Top="46" VerticalAlignment="Top"/>
        </Canvas>

    </Grid>
</Page>
