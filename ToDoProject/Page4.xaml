<Page x:Class="ToDoProject.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToDoProject"
      mc:Ignorable="d" 
      d:DesignHeight="820" d:DesignWidth="1420"
      Title="Page4">

    <Page.Resources>
        <Style x:Key="CircleBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="50"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        

    </Page.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1170"/>
        </Grid.ColumnDefinitions>

        <Viewbox Stretch="Uniform" Margin="1,123,309,10" Grid.Column="1">
            <Calendar x:Name="cal_ToDoCal"
          Background="White"
          Foreground="Black"
          DisplayMode="Month"
          IsTodayHighlighted="True"
          SelectionMode="SingleDate"
                      SelectedDatesChanged="cal_ToDoCal_SelectedDatesChanged"
                      Loaded="cal_ToDoCal_Loaded">
    
</Calendar>
        </Viewbox>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="842,174,31,56" Grid.Column="1" Background="Transparent">
            <StackPanel x:Name="ToDoListPanel" Height="164" Width="300" VerticalAlignment="Top"/>
        </ScrollViewer>
        <Label Grid.Column="1" Content="TASKS" HorizontalAlignment="Left" Margin="842,82,0,0" VerticalAlignment="Top" FontSize="36"/>

        <Border x:Name="btn_AddTask"
        Grid.Column="1"
        Style="{StaticResource CircleBorderStyle}"
        Height="55" Width="55"
        Margin="1081,80,0,0"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
                Cursor="Hand"
        MouseLeftButtonDown="btn_AddTask_Click">
            <TextBlock Text="+" 
               FontSize="36"
               FontWeight="Bold"
               Foreground="White"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
